<?xml version="1.0" encoding="utf-8"?>
<mx:Application
    xmlns="*" xmlns:mx="http://www.adobe.com/2006/mxml"
    creationComplete="onCreationComplete()">
    <mx:Script source="KLTTrackerTest.as"></mx:Script>
    <mx:HBox>
        <mx:Panel title="Original image">
            <mx:Image id="image" source="@Embed('Lenna.png')" />
        </mx:Panel>
        <mx:Panel title="Feature points">
            <mx:Canvas id="canvas" width="{image.width}" height="{image.height}" />
        </mx:Panel>
    </mx:HBox>
    <mx:HBox>
        <mx:Panel title="Twisted image">
            <mx:Image id="image2" source="@Embed('Lenna-twisted.png')" />
        </mx:Panel>
        <mx:Panel title="Tracked feature points">
            <mx:Canvas id="canvas2" width="{image.width}" height="{image.height}" />
        </mx:Panel>
    </mx:HBox>
</mx:Application>
